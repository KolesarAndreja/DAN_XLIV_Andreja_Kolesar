<Window x:Class="DAN_XLIV_Andreja_Kolesar.View.AdjactOrApprove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAN_XLIV_Andreja_Kolesar.View"
        mc:Ignorable="d"
        Title="AdjactOrApprove"
        Height="auto"
        Width="auto">
    <Grid>
        <Label Content="Change status:"
               HorizontalAlignment="Left"
               Margin="60,55,0,0"
               VerticalAlignment="Top"
               Width="100" />
        <RadioButton Content="Approve"
                     x:Name="approve"
                     HorizontalAlignment="Left"
                     Margin="175,61,0,0"
                     VerticalAlignment="Top"/>
        <RadioButton Content="Rejecte"
                     HorizontalAlignment="Left"
                     Margin="290,61,0,0"
                     VerticalAlignment="Top" />
        <Button Content="Save"
                HorizontalAlignment="Left"
                Margin="75,140,0,0"
                VerticalAlignment="Top"
                Width="75"/>
        <Button Content="Close"
                HorizontalAlignment="Left"
                Margin="240,140,0,0"
                VerticalAlignment="Top"
                Width="75" />
    </Grid>
</Window>
